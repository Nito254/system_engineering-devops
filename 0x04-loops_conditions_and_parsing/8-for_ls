#!/usr/bin/env bash
# Loop through non-hidden files in the current directory
for item in *; do
  # Skip if it is not a file or directory
  [ -e "$item" ] || continue

  # Extract the part after the first dash
  after_dash="${item#*-}"

  # Only display if there was a dash in the name
  if [[ "$item" == *-* ]]; then
    echo "$after_dash"
  fi
done
